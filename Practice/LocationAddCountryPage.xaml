<Window x:Class="Practice.LocationAddCountryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="LocationAddCountryPage" MaxHeight="215" MaxWidth="500" MinWidth="500" MinHeight="215">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"></RowDefinition>
            <RowDefinition Height="21*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="dataGrid" ItemsSource="{Binding Countries}" MaxWidth="500" SelectedItem="{Binding SelectedCountry}" Height="163" VerticalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Button Content="Привязать страну" Margin="380,-5,10,5" Command="{Binding AddCountry}" RenderTransformOrigin="0.5,0.5" />
        </Grid>
    </Grid>
</Window>
