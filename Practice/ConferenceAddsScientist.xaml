<Window x:Class="Practice.ConferenceAddsScientist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="ConferenceAddsScientist" MaxHeight="215" MaxWidth="500" MinWidth="500" MinHeight="215">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="163*"></RowDefinition>
            <RowDefinition Height="21*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="dataGrid" Margin="0,0,0,35" ItemsSource="{Binding Scientists}" SelectedItem="{Binding SelectedScientist}"/>
        <Grid Grid.Row="1">
            <Button Content="Добавить ученого" Command="{Binding AddScientistCommand}" Margin="392,1,0,0"/>
        </Grid>
    </Grid>
</Window>
